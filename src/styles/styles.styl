@import url('https://fonts.googleapis.com/css?family=Orbitron');

cream = rgb(246,243,238)
brown = rgb(69,54,47)
yellow = rgb(245,208,76)
orange = rgb(255,111,29)
green =rgb(147,209,85)

body
  margin 0

canvas
  border 8px solid #333
  border-radius: 10px
  -webkit-box-shadow: 7px 9px 43px -12px rgba(0,0,0,0.75);
  -moz-box-shadow: 7px 9px 43px -12px rgba(0,0,0,0.75);
  box-shadow: 7px 9px 43px -12px rgba(0,0,0,0.75);

button
  font-family: 'Orbitron', sans-serif;

.canvasContainer
  width 100%
  display: flex;
  justify-content: center;
  padding-top: 30px

.controlsContainer
  display: flex;
  width: 100%;
  justify-content: center;
  margin-top 50px

.buttonsContainer
.generationsContainer
.sliderContainer
  display: flex;
  flex-direction: column;
  width 250px
  align-items: center;

.sliderContainer
  transform: rotate(270deg);

.speedSlider
.zoomSlider
  margin-left 30px
  margin-right 30px

.generationsContainer
  font-family: 'Orbitron', sans-serif;
  font-size: 64px
  display flex
  flex-direction: row;

.generationsText
  width: 64px
  text-align: right;
