@import url('https://fonts.googleapis.com/css?family=Orbitron');

cream = rgb(246,243,238)
brown = rgb(69,54,47)
yellow = rgb(245,208,76)
orange = rgb(255,111,29)
green =rgb(147,209,85)

select:-moz-focusring {
    color: transparent;
    text-shadow: 0 0 0 #000;
}

body
  margin 0

canvas
  border 8px solid #333
  border-radius: 10px
  -webkit-box-shadow: 7px 9px 43px -12px rgba(0,0,0,0.75);
  -moz-box-shadow: 7px 9px 43px -12px rgba(0,0,0,0.75);
  box-shadow: 7px 9px 43px -12px rgba(0,0,0,0.75);

button
  font-family: 'Orbitron', sans-serif;

.canvasContainer
  width 100%
  height: 600px
  display: flex;
  justify-content: center;
  padding-top: 30px

.controlsContainer
  display: flex;
  width: 100%;
  justify-content: center;
  margin-top 50px

.buttonsContainer
.generationsContainer
.sliderContainer
  display: flex;
  flex-direction: column;
  width 250px
  align-items: center;
  button
    width: 60px;
    height: 60px;
    border-radius: 30px;
    border: 0px;
    text-align: center;
    background-color: #E6EFF2
    border 3px solid black
    margin 5px 0px 5px 0px
    transition: all 0.2s
    box-shadow: 0 2px 2px #888
  button:focus
    outline: none
  .buttonTrans
    background-color: green

.sliderContainer
  transform: rotate(270deg);
  display: flex;
  justify-content: center;

.speedSlider
.zoomSlider
  margin 30px 0px 30px 0px
  appearance none
  width 160px
  height: 10px
  border 2px solid black
  border-radius: 5px
  background-color: #E6EFF2
  box-shadow: 0 2px 2px #888
  outline none

.speedSlider::-webkit-slider-thumb
.zoomSlider::-webkit-slider-thumb
  appearance none
  width: 40px
  height: 30px
  border: 3px solid black
  border-radius: 15px
  background-color: white
  box-shadow: 0 0 2px #999

.speedSlider::-moz-range-thumb
.zoomSlider::-moz-range-thumb
  appearance none
  width: 40px
  height: 30px
  border: 3px solid black
  border-radius: 15px
  background-color: white
  box-shadow: 0 0 2px #999

.generationsContainer
  font-family: 'Orbitron', sans-serif;
  font-size: 64px
  display flex
  flex-direction: row;

.generationsText
  width: 64px
  text-align: right;
